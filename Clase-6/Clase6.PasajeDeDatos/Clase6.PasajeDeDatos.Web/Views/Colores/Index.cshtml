@{
}

@model List<string>
<form method="post" action="@Url.Action("CambiarColorFondo")">
    <label for="colores">Color de fondo:</label>
    <select id="colores" name="color">
        @foreach (string color in Model)
        {
            <option value="@color">@color</option>
        }
    </select>
    <button type="submit">Cambiar</button>
</form>